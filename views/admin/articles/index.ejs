
<%- include('../../partials/header.ejs') %>
<%- include('../../partials/navbar.ejs') %>
      

<div class="container-fluid">
    <hr>
    <h2>Artigos</h2>
    <hr> 
    <a class="btn btn-success" href="/admin/articles/new">Criar Novo Artigo</a>
    <table class="table  mt-3" >
        <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Slug</th>
                <th>Categoria</th>
                <th>Ações</th>
            </tr>
            <tbody>
                    <% articles.forEach(article => { %>
                        <tr>
                            <td><%= article.id %></td>
                            <td><%= article.title %></td>
                            <td><%= article.slug %></td>
                            <td><%= article.category.title %></td>
                            <th>
                               <a href="/admin/articles/edit/<%= article.id %> " class="btn btn-warning ml-0">Editar</a>
                                <form  method="POST" action="/articles/delete" style="display: inline;" onsubmit="confirmDelete(event,this)">
                                <input type="hidden" name="id" value="<%= article.id %>">
                                <button class="btn btn-danger">Excluir</button>
                             </form>
                            
                        </th>
                        </tr>

                    <% }) %>
            </tbody>
        </thead>
    </table>

</div>
    
<%- include('../../partials/footer.ejs') %>

<script>
    function confirmDelete(event,form){
        event.preventDefault();
        const decision = confirm("Deseja realmente deletar")
        if(decision){
            form.submit();
        }
    }
</script>