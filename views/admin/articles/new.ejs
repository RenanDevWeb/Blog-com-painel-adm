
<%- include('../../partials/header.ejs') %>
<%- include('../../partials/navbar.ejs') %>
      

<div class="container">
    <div class="card mt-3">
        <div class="card-header">
            <h2>Novo Artigo</h2>
        </div>
        <div class="card-body">
            <form  method="POST" action="/admin/articles/save" >
                <input class="form-control mb-3" type="text" name="title" placeholder="Defina o titulo do artigo">
                <textarea class="form-control mt-3" name="body" id="article" cols="30" rows="10"></textarea>
                    <label for="" class="mt-1">Categoria</label>
                    <Select name="category" class="form-control">
                        <% categories.forEach((category) => { %>
                            <option value="<%= category.id %>"><%= category.title %></option>
                        <% }) %>
                    </Select>
                


              <button class="btn btn-success mt-3">Cadastrar</button>
            </form>
        </div>
    </div>


<%- include('../../partials/footer.ejs') %>

<script src="/tinymce/tinymce.min.js"></script>
<script>
    tinymce.init({
        language: 'pt_BR',
        selector:"#article",
        branding: false,
        plugins:[
            'advlist autolink link image lists print preview hr searchreplace wordcount fullscreen insertdatetime media save table paste copy emoticons'
        ]
    })
</script>