
<%- include('../../partials/header.ejs') %>
<%- include('../../partials/navbar.ejs') %>
      

<div class="container">
    <hr>
    <h2>Categorias</h2>
    <hr> 
    <a class="btn btn-success" href="/admin/categories/new">Criar Nova Categoria</a>
    <table class="table  mt-3" >
        <thead>
            <tr>
                <td>ID</td>
                <td>Title</td>
                <td>Slug</td>
                <td>Ações</td>
            </tr>
            <tbody>
                    <% categories.forEach(category => { %>
                        <tr>
                            <td><%= category.id %></td>
                            <td><%= category.title %></td>
                            <td><%= category.slug %></td>
                            <th>
                               <a href="/admin/categories/edit/<%= category.id %>" class="btn btn-warning ml-0">Editar</a>
                                <form  method="POST" action="/categories/delete" style="display: inline;" onsubmit="confirmDelete(event,this)">
                                <input type="hidden" name="id" value="<%= category.id %>">
                                <button class="btn btn-danger">Excluir</button>
                             </form>
                            
                        </th>
                        </tr>

                    <% }) %>
            </tbody>
        </thead>
    </table>

</div>
    
<%- include('../../partials/footer.ejs') %>

<script>
    function confirmDelete(event,form){
        event.preventDefault();
        const decision = confirm("Deseja realmente deletar")
        if(decision){
            form.submit();
        }
    }
</script>